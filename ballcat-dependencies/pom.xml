			</dependency>
			<dependency>
				<groupId>com.hccake</groupId>
				<artifactId>ballcat-spring-boot-starter-redis</artifactId>
				<version>${revision}</version>
			</dependency>
			<dependency>
				<groupId>com.hccake</groupId>
				<artifactId>ballcat-spring-boot-starter-dingtalk</artifactId>
